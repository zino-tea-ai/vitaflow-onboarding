      "features": [
        "AccountInfo",
        "Achievements"
      ]
    },
    "Settings": {
      "cn": "设置",
      "en": "Settings",
      "stage": "Core",
      "description_cn": "应用设置",
      "description_en": "App settings",
      "features": [
        "Subscription",
        "Notification",
        "Privacy"
      ]
    }
  },
  
  "features": {
    "universal": {
      "description_cn": "通用功能，适用于所有垂直领域",
      "description_en": "Universal features applicable to all verticals",
      "list": [
        "Splash",
        "ValueProp",
        "Loading",
        "PlanSelect",
        "PriceDisplay",
        "EmailInput",
        "PasswordInput",
        "OAuthApple",
        "OAuthGoogle",
        "Overview",
        "AccountInfo",
        "Subscription",
        "Notification",
        "Privacy"
      ]
    },
    "vertical": {
      "health_fitness": {
        "description_cn": "健康健身类产品专用功能",
        "description_en": "Health and fitness specific features",
        "list": [
          "GenderSelect",
          "HeightInput",
          "WeightInput",
          "BodyMetrics",
          "DirectionSelect",
          "TargetInput",
          "FoodSearch",
          "FoodDetail",
          "FoodLog",
          "PhotoScan",
          "WeeklyChart",
          "MonthlyChart",
          "TrendAnalysis"
        ]
      },
      "social": {
        "description_cn": "社交类产品专用功能",
        "description_en": "Social product specific features",
        "list": [
          "FriendList",
          "ActivityFeed",
          "ReferralInvite"
        ]
      }
    },
    "product_specific": {
      "description_cn": "产品特定功能，需要动态扩展",
      "description_en": "Product-specific features, dynamically expandable",
      "growth_mechanism": {
        "description_cn": "当遇到新功能时，AI会建议添加到词表，经过审核后纳入",
        "description_en": "When encountering new features, AI suggests additions to taxonomy, reviewed and incorporated"
      }
    }
  },
  
  "synonyms": {
    "description_cn": "同义词映射，帮助AI识别不同表达方式",
    "description_en": "Synonym mapping to help AI recognize different expressions",
    "mappings": {
      "Splash": ["启动页", "Launch", "启动屏", "Splash Screen"],
      "ValueProp": ["价值主张", "产品介绍", "产品价值", "Value Proposition"],
      "GenderSelect": ["性别选择", "选择性别", "Gender Selection"],
      "FoodSearch": ["食物搜索", "搜索食物", "Food Search", "Search Food"],
      "PlanSelect": ["套餐选择", "选择套餐", "Plan Selection", "Subscription Plan"],
      "Overview": ["概览", "总览", "Dashboard", "Home"]
    }
  },
  
  "validation_rules": {
    "feature_naming": {
      "pattern": "^[A-Z][a-zA-Z0-9]+$",
      "description_cn": "Feature名称必须使用PascalCase",
      "description_en": "Feature names must use PascalCase"
    },
    "required_fields": {
      "stage": ["cn", "en", "description_cn", "description_en", "modules"],
      "module": ["cn", "en", "stage", "description_cn", "description_en", "features"],
      "feature": {
        "description_cn": "Feature在modules中定义，无需单独JSON结构",
        "description_en": "Features are defined within modules, no separate JSON structure needed"
      }
    }
  },
  
  "usage_guidelines": {
    "ai_analysis": {
      "description_cn": "AI分析时必须严格按照此词表选择Feature，如无匹配则使用'Other'",
      "description_en": "AI analysis must strictly follow this taxonomy, use 'Other' if no match"
    },
    "manual_classification": {
      "description_cn": "手动分类时，优先从词表选择，如需新增需经过审核",
      "description_en": "Manual classification should prioritize taxonomy, new additions require review"
    },
    "comparison": {
      "description_cn": "跨产品对比时，使用统一词表确保可比性",
      "description_en": "Cross-product comparison requires unified taxonomy for comparability"
    }
  }
}
