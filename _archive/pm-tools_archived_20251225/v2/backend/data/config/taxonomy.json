{
  "version": "1.0",
  "description": "标准分类词表 - 3层结构：Stage / Module / Feature",
  "last_updated": "2025-01-12",
  
  "stages": {
    "Onboarding": {
      "cn": "引导阶段",
      "en": "Onboarding",
      "description_cn": "从启动到首次使用核心功能前的所有页面",
      "description_en": "All pages from launch to first use of core features",
      "modules": [
        "Welcome",
        "Profile",
        "Goal",
        "Preference",
        "Permission",
        "Growth",
        "Initialization",
        "Paywall",
        "Registration"
      ]
    },
    "Core": {
      "cn": "核心阶段",
      "en": "Core",
      "description_cn": "核心功能使用阶段",
      "description_en": "Core feature usage stage",
      "modules": [
        "Dashboard",
        "Tracking",
        "Progress",
        "Content",
        "Social",
        "Profile",
        "Settings"
      ]
    }
  },
  
  "modules": {
