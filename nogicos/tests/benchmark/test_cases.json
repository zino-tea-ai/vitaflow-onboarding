{
  "version": "1.0",
  "description": "NogicOS Benchmark Test Cases - Based on WebArena/OSWorld standards",
  "tasks": [
    {
      "task_id": "B001",
      "category": "browser",
      "difficulty": "easy",
      "task": "Navigate to https://example.com",
      "evaluator": {
        "type": "url",
        "mode": "contains",
        "expected": "example.com"
      },
      "timeout_seconds": 30,
      "max_steps": 3,
      "optimal_steps": 1
    },
    {
      "task_id": "B002",
      "category": "browser",
      "difficulty": "easy",
      "task": "Go to https://www.google.com and tell me the page title",
      "evaluator": {
        "type": "string",
        "mode": "must_include",
        "expected": ["google"]
      },
      "timeout_seconds": 30,
      "max_steps": 3,
      "optimal_steps": 1
    },
    {
      "task_id": "B003",
      "category": "browser",
      "difficulty": "medium",
      "task": "Navigate to https://example.com and extract all text content from the page",
      "evaluator": {
        "type": "string",
        "mode": "must_include",
        "expected": ["example domain", "documentation"]
      },
      "timeout_seconds": 45,
      "max_steps": 5,
      "optimal_steps": 2
    },
    {
      "task_id": "B004",
      "category": "browser",
      "difficulty": "medium",
      "task": "Go to https://news.ycombinator.com and get the title of the first story",
      "evaluator": {
        "type": "string",
        "mode": "regex",
        "expected": ".{10,}"
      },
      "timeout_seconds": 60,
      "max_steps": 5,
      "optimal_steps": 2
    },
    {
      "task_id": "L001",
      "category": "local",
      "difficulty": "easy",
      "task": "List all files in the current directory",
      "evaluator": {
        "type": "string",
        "mode": "must_include",
        "expected": ["engine", "tests"]
      },
      "timeout_seconds": 15,
      "max_steps": 2,
      "optimal_steps": 1
    },
    {
      "task_id": "L002",
      "category": "local",
      "difficulty": "easy",
      "task": "Read the content of README.md file",
      "evaluator": {
        "type": "string",
        "mode": "must_include",
        "expected": ["nogicos"]
      },
      "timeout_seconds": 15,
      "max_steps": 2,
      "optimal_steps": 1
    },
    {
      "task_id": "L003",
      "category": "local",
      "difficulty": "easy",
      "task": "Create a new file called benchmark_test.txt on the Desktop with the content 'Hello Benchmark'",
      "evaluator": {
        "type": "file",
        "path": "~/Desktop/benchmark_test.txt",
        "checks": [
          {"type": "exists"},
          {"type": "content_match", "expected": "Hello Benchmark"}
        ]
      },
      "timeout_seconds": 20,
      "max_steps": 3,
      "optimal_steps": 1,
      "cleanup": ["~/Desktop/benchmark_test.txt"]
    },
    {
      "task_id": "L004",
      "category": "local",
      "difficulty": "medium",
      "task": "Search for all Python files (*.py) in the engine directory",
      "evaluator": {
        "type": "string",
        "mode": "must_include",
        "expected": ["python", "engine"]
      },
      "timeout_seconds": 30,
      "max_steps": 3,
      "optimal_steps": 1
    },
    {
      "task_id": "L005",
      "category": "local",
      "difficulty": "medium",
      "task": "Run the command 'python --version' and tell me the Python version",
      "evaluator": {
        "type": "string",
        "mode": "regex",
        "expected": "\\d+\\.\\d+\\.\\d+"
      },
      "timeout_seconds": 20,
      "max_steps": 3,
      "optimal_steps": 1
    },
    {
      "task_id": "L006",
      "category": "local",
      "difficulty": "medium",
      "task": "Find all files containing 'TODO' in the tests directory",
      "evaluator": {
        "type": "string",
        "mode": "must_include",
        "expected": ["tests"]
      },
      "timeout_seconds": 30,
      "max_steps": 3,
      "optimal_steps": 1
    },
    {
      "task_id": "M001",
      "category": "mixed",
      "difficulty": "medium",
      "task": "Go to https://example.com and save the page title to a file called example_title.txt",
      "evaluator": {
        "type": "file",
        "path": "./example_title.txt",
        "checks": [
          {"type": "exists"},
          {"type": "not_empty"}
        ]
      },
      "timeout_seconds": 60,
      "max_steps": 8,
      "optimal_steps": 3,
      "cleanup": ["./example_title.txt"]
    },
    {
      "task_id": "M002",
      "category": "mixed",
      "difficulty": "medium",
      "task": "Navigate to https://example.com, extract the main heading and paragraph, then save them to example_data.json as a JSON object with keys 'title' and 'content'",
      "evaluator": {
        "type": "file",
        "path": "./example_data.json",
        "checks": [
          {"type": "exists"},
          {"type": "json_valid"},
          {"type": "json_has_key", "key": "title"}
        ]
      },
      "timeout_seconds": 90,
      "max_steps": 10,
      "optimal_steps": 4,
      "cleanup": ["./example_data.json"]
    },
    {
      "task_id": "M003",
      "category": "mixed",
      "difficulty": "hard",
      "task": "List all files on Desktop, then create a summary report in desktop_summary.txt that includes the count of files and folders",
      "evaluator": {
        "type": "file",
        "path": "./desktop_summary.txt",
        "checks": [
          {"type": "exists"},
          {"type": "not_empty"}
        ]
      },
      "timeout_seconds": 90,
      "max_steps": 10,
      "optimal_steps": 3,
      "cleanup": ["./desktop_summary.txt"]
    }
  ]
}

